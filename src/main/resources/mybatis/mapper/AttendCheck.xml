<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.practice.setoka.mapper.AttendCheckMapper">

	<update id="updatePoint">
    	UPDATE users SET point = point + 1 WHERE num = #{num}
	</update>
	
	<insert id="insertAttendance">
	    INSERT INTO attendance (userNum, date) VALUES (#{userNum}, #{date})
	</insert>
	
	<select id="getAttendanceDate" resultType="string">
    	SELECT DATE_FORMAT(date, '%Y-%m-%d') 
    	FROM attendance 
    	WHERE userNum = #{userNum}
	</select>
</mapper>