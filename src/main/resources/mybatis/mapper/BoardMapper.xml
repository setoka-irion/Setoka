<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.practice.setoka.mapper.BoardMapper">

	<!-- 모든 목록-->
	<select id="AllList" resultType="com.practice.setoka.dao.Board">
		SELECT * FROM board
	</select>

	<!-- 글 등록 -->
	<insert id="regist" parameterType="com.practice.setoka.dao.Board">
		INSERT INTO board (title, content, view_count, created_at)
		VALUES (#{title}, #{content}, 0, NOW())
	</insert>

	<!-- 글 수정-->


	<!--글 삭제 -->


	<!-- 조회수 증가 -->
	<update id="updateViewCount" parameterType="int">
		UPDATE board SET view_count = view_count + 1 WHERE id = #{id}
	</update>

	<!-- 아이디로 검색 -->
	<select id="listById" parameterType="int"
		resultType="com.practice.setoka.dao.Board">
		SELECT * FROM board WHERE id = #{id}
	</select>

	<!-- 제목으로 검색 -->
	<select id="listByTitle" parameterType="int"
		resultType="com.practice.setoka.dao.Board">
		SELECT * FROM board WHERE id = #{id}
	</select>

	<!-- 내용으로 검색 -->
	<select id="listByContent" parameterType="int"
		resultType="com.practice.setoka.dao.Board">
		SELECT * FROM board WHERE id = #{id}
	</select>

	<!-- 오류나면 여기임 수정 더 필요함-->
	<!-- 유저 번호 이용 유저 아이디 가져오기-->
	<select id="selectIdOne" resultMap="boardIdMap">
		SELECT b.board_id, b.user_id,
		u.id, b.board_title, b.board, b.regist_date, b.state
		FROM board b JOIN
		users u ON b.user_id = u.user_id WHERE b.board_id =
		#{boardId};
	</select>

	<!-- 위에 가져온거 여기 매핑 -->
	<resultMap id="boardIdMap" type="com.practice.setoka.dto.">
		<id property="boardId" column="board_id" />
		<id property="userId" column="user_id" />
		<result property="id" column="id" />
		<result property="boardTitle" column="board_title" />
		<result property="board" column="board" />
		<result property="registDate" column="regist_date"
			jdbcType="TIMESTAMP" />
		<result property="state" column="state" />
	</resultMap>

	<!-- 게시글과 유저정보 조인해서 가져오기 -->
	<resultMap id="BoardWithUserMap" type="com.practice.setoka.BoardDto">
		<id property="boardId" column="board_id" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="userId" column="user_id" />
		<result property="user.id" column="user_id_str" /> <!-- 유저 아이디 문자열 -->
	</resultMap>

	<select id="findBoardsByUserIdString" resultMap="BoardWithUserMap">
		SELECT b.*, u.id AS id_str
		FROM board b
		JOIN user u ON b.user_id = u.user_id
		WHERE u.id = #{id}
	</select>
	
	<!-- 팀장님이 만들어준거-->
<select id="findBoardsByUserIdString" resultMap="BoardWithUserMap">
 SELECT u.num, u.id, u.nickname, u.realname, u.grade, b.num, b.title, b.content, b.type, b.likes, b.views, b.price, b.area, b.registerDate 
	 FROM users u
	 JOIN board b
	 ON u.num = b.userNum;
</select>

</mapper>